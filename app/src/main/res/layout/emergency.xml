<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" android:background="#FFFFFF">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your location is:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.669" app:layout_constraintHorizontal_bias="0.313"
                android:textColor="#000000" android:id="@+id/textView16"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almaty, Manasa 34"
                android:id="@+id/textView5" android:textColor="#8B45C2" android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.683"
                app:layout_constraintVertical_bias="0.669" android:clickable="true" android:onClick="location"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="102           Police Station"
            android:layout_width="287dp"
            android:layout_height="48dp" android:id="@+id/button4"
            android:fontFamily="serif" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#4568C2" android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.532" app:layout_constraintVertical_bias="0.471"/>
    <Button
            android:text="103                 Ambulance"
            android:layout_width="287dp"
            android:layout_height="48dp" android:id="@+id/button5"
            android:fontFamily="serif" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#BC3F3F" android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.532" app:layout_constraintVertical_bias="0.562"/>
    <ImageView
            android:layout_width="198dp"
            android:layout_height="133dp" app:srcCompat="@drawable/screenshot_1" android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.207"/>
    <ImageView
            android:layout_width="52dp"
            android:layout_height="53dp" app:srcCompat="@drawable/screenshot_2" android:id="@+id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.983"
            app:layout_constraintVertical_bias="0.008"
            android:onClick="profile"
            android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>